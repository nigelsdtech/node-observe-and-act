{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "outDir": "compiled",
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "composite": true,
        "incremental": true,
        "lib": ["ES2015", "DOM"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
}